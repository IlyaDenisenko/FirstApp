<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon"
    tools:context="com.example.tom.firstapp.ActivitySettings">

    <CheckBox
        android:id="@+id/checkMusic"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:checked="true"
        android:theme="@style/MyCheckBox"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/checkSound"
        android:layout_marginTop="108dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/checkSound"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Музыка"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@+id/checkMusic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <CheckBox
        android:id="@+id/checkSound"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:checked="true"
        android:theme="@style/MyCheckBox"
        app:layout_constraintRight_toLeftOf="@+id/textSound"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="33dp"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/checkMusic" />

    <TextView
        android:id="@+id/textSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Звук"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/checkSound"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="10dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
