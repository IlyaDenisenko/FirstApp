<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_runs"
    android:screenOrientation="portrait"
    tools:context="com.example.tom.firstapp.Menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <Button
            android:id="@+id/button"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:background="@android:color/holo_orange_light"
            android:text="@string/start_but"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/button_text"
            android:textStyle="italic" />

        <Button
            android:id="@+id/settings"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="80dp"
            android:layout_gravity="center"
            android:background="@android:color/holo_orange_light"
            android:text="@string/set_but"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/button_text"
            android:textStyle="italic"
            />

        <Button
            android:id="@+id/recBut"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="80dp"
            android:layout_gravity="center"
            android:background="@android:color/holo_orange_light"
            android:text="@string/rec_but"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/button_text"
            android:textStyle="italic" />


        <TextView
            android:id="@+id/record"
            android:layout_width="@dimen/record_text_width"
            android:layout_height="@dimen/record_text_height"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textColor="@android:color/background_light" />
    </LinearLayout>




</RelativeLayout>
